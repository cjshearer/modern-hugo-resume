{
  "author": "Cody Shearer",
  "description": "A resume website",
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@fortawesome/fontawesome-free": "^6.5.2",
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "@tailwindcss/typography": "^0.5.13",
    "autoprefixer": "^10.4.19",
    "lint-staged": "^15.2.7",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "postcss-html": "^1.7.0",
    "prettier": "^3.3.2",
    "prettier-plugin-go-template": "^0.0.15",
    "prettier-plugin-tailwindcss": "^0.6.4",
    "simple-git-hooks": "^2.11.1",
    "stylelint": "^16.6.1",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-config-tailwindcss": "^0.0.7",
    "tailwindcss": "^3.4.4"
  },
  "engines": {
    "node": ">=20.2.0",
    "npm": "please-use-pnpm",
    "pnpm": "9.1.1",
    "yarn": "please-use-pnpm"
  },
  "lint-staged": {
    "*": [
      "pnpm prettier --write --ignore-unknown"
    ],
    "*.{css, html}": [
      "pnpm stylelint --fix"
    ]
  },
  "name": "modern-hugo-resume",
  "packageManager": "pnpm@9.1.1",
  "scripts": {
    "build": "pnpm run hugo:build",
    "clean": "pnpm run hugo:clean && rm -rf node_modules",
    "dev": "pnpm run hugo:serve",
    "format": "pnpm prettier .",
    "format:check": "pnpm format --check",
    "format:fix": "pnpm format --write",
    "hugo:build": "hugo -d build --minify",
    "hugo:clean": "rm -rf build resources public",
    "hugo:serve": "hugo server",
    "lint": "pnpm stylelint **/*.{html,css}",
    "lint:fix": "pnpm lint --fix",
    "prepare": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "commit-msg": "pnpm commitlint --edit ${1}",
    "pre-commit": "pnpm lint-staged"
  },
  "version": "1.0.0"
}
